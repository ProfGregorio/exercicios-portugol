programa
{
	/*
		Faça um algoritmo que peça uma nota, entre zero e dez. 
		Mostre uma mensagem caso o valor seja inválido e continue pedindo até que
		o usuário informe um valor válido.
	*/

	
	funcao inicio()
	{
		inteiro nota
		faca
		{
			escreva ("Informe sua nota (valores aceitos de 0 a 10): ")
			leia (nota)
		}
		enquanto (nota < 0 ou nota > 10)
		
		escreva ("\nCorreto!\n")
	}
}
